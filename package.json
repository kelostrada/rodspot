{
  "name": "rodspot",
  "version": "1.0.0",
  "description": "Transparent grid overlay with global mouse tracking for gaming",
  "main": "src/main.js",
  "scripts": {
    "start": "npm run build-native && electron .",
    "dev": "npm run build-native && electron .",
    "build-native": "node scripts/build-native.js",
    "clean-native": "rm -f build/*",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.rodspot.app",
    "productName": "RodSpot",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "native/**/*",
      "build/**/*",
      "package.json"
    ],
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "dir",
      "asarUnpack": ["build/**/*"]
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "screenshot-desktop": "^1.15.0"
  },
  "devDependencies": {
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0"
  }
}
